<Window x:Class="ProgaVove2.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите дату" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Calendar x:Name="MainCalendar" SelectedDate="{Binding SelectedDate}"/>
        <Button Content="OK" Margin="10" Click="OK_Click"/>
    </StackPanel>
</Window>